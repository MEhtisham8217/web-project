<body background="~/Contents/images/back6.jpg" >
    <form method="post" action="../Home/Authenticate">
        <div class="content">
            <div class="col-sm-12">
                <br />

                <div class="row">
                    <div class="col-sm-4">
                        <img src="../../Content/logo.png" alt="LOGO" style="padding-top:25px">
                    </div>
                    <div class="col-sm-2">
                        
                    </div>

                    <div class="col-sm-6 form-group">
                        <h2>Sign Up</h2><br />

                        <input class="form-control" style="width:50%" id="sname" name="sname" placeholder="Name" type="text" required>
                        <input class="form-control" style="width:50%" id="scnic" name="scnic" placeholder="CNIC" onchange="checkcnic()" type="text" required>
                        <input class="form-control" style="width:50%" id="sage" name="sage" placeholder="AGE" onchange="checkage()" type="text" required>
                        <input class="form-control" style="width:50%" id="sphone" name="sphone" placeholder="Phone" onchange="checkphone()" type="text" required>
                        <select name="sgender" id="sgender" required class="form-control" style="width:50%">
                            <option>---Gender---</option>
                            <option value="M">Male</option>
                            <option value="F">Female</option>

                        </select>
                        <input class="form-control" style="width:50%" id="susername" name="susername" placeholder="User Name" type="text" required>
                        <input class="form-control" style="width:50%" id="spassword" name="spassword" placeholder="Password" onchange="checkpassword()" type="password" required><br>

                        <button class="btn btn-default" type="submit"> Sign up</button>
                        <a href="../../Home/Index">Login?</a>

                    </div>

                </div>
            </div>
        </div>
    </form>
    <script type="text/javascript">

        function checkpassword() {
            var pass = document.getElementById("spassword").value;
            if (pass.length < 7) {
                alert("Please Enter Right password lenght greater than 8");
            }
        }
        function checkcnic() {
            var cnic = document.getElementById("scnic").value;
            if (cnic.length < 13) {
                alert("Please Enter Right cnic lenght 15 ");
            }
            if (cnic.length > 13) {
                alert("Please Enter Right cnic lenght 15 ");
            }
        }
        function checkphone() {
            var phone = document.getElementById("sphone").value;
            if (phone.length < 10) {
                alert("Please Enter Right phone number  ");
            }
            if (phone.length > 12) {
                alert("Please Enter Right phone number ");
            }
        }
        function checkage() {
            var age = document.getElementById("sage").value;
            if (age < 18) {
                alert("sorry age cant be less than 18  ");
            }

        }



    </script>

